{
  "name": "phat-contract",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test-deploy": "hardhat run --network goerli ./scripts/deploy.ts",
    "test-set-attestor": "hardhat run --network goerli ./scripts/goerli/set-attestor.ts",
    "test-push-request": "hardhat run --network goerli ./scripts/goerli/push-request.ts",
    "test-verify": "hardhat verify --network goerli ",
    "build-function": "phat-fn build src/index.ts",
    "run-function": "phat-fn build src/index.ts && phat-fn run dist/index.js",
    "test-deploy-function": "phat-fn upload",
    "test-update-function": "phat-fn update"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
